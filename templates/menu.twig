        <div class="">
            <p>Добро пожаловать {{ username }}</p><a href="/auth/logout">[Выход]</a>
        </div>
    {% else %}
        <form action="/auth/login" method="post">
            <input type="text" name="login" value="admin">
            <input type="password" name="pass" value="">
